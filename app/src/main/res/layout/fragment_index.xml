<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/colorWhite">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.jhonlee.sywj.ui.wedget.DotCirclerView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="10dp" />
            </FrameLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp">
                <TableRow>
                    <TextView
                        android:id="@+id/tv_payment"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_online_payment"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="在线缴费"
                        />
                    <TextView
                        android:id="@+id/tv_report"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_online_report"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="在线报事" />

                    <TextView
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_life_payment"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="生活缴费" />

                    <TextView
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_service_hotline"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="服务热线" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_community_radio"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="社区广播" />
                    <TextView
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_aika"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="我爱我家" />
                    <TextView
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_onekey_open_the_door"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一键开门" />
                    <TextView
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/index_visitors_traffic"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="访客通行" />
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp">

                <TextView
                    android:drawableLeft="@drawable/index_message"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="最新广播" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="更多" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>